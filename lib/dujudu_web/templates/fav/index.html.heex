<h1 class="ingredient-header">Favourites</h1>

<Flop.Phoenix.table
  items={@ingredients}
  meta={@meta}
  path_helper={{Routes, :live_path, [@conn, DujuduWeb.IngredientIndexLive]}}
  class="e2e-search-results"
>
  <:col let={ingredient} label="Title" field={:title}>
    <%= link ingredient.title, to: Routes.live_path(@conn, DujuduWeb.IngredientLive, ingredient) %>
  </:col>
  <:col let={ingredient} label="Image" field={:image}>
    <% image = image_for(ingredient) %>
    <%= if not is_nil(image) do %>
      <%= link to: Routes.live_path(@conn, DujuduWeb.IngredientLive, ingredient) do %>
        <%= img_tag(resize_wikidata_image(image.commons_url, 120)) %>
      <% end %>
    <% end %>
  </:col>
</Flop.Phoenix.table>

<Flop.Phoenix.pagination
  meta={@meta}
  path_helper={{Routes, :live_path, [@conn, DujuduWeb.IngredientIndexLive]}}
/>
