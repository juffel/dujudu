<h1>Ingredients</h1>

<Flop.Phoenix.table
  items={@ingredients}
  meta={@meta}
  path_helper={{Routes, :ingredient_path, [@conn, :index]}}
>
  <:col let={ingredient} label="Title" field={:title}><%= ingredient.title %></:col>
</Flop.Phoenix.table>

<Flop.Phoenix.pagination
  meta={@meta}
  path_helper={{Routes, :ingredient_path, [@conn, :index]}}
/>
